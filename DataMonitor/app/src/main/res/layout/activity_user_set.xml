<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_set"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yiweiyihangft.datamonitor.UserSetActivity">

    <TextView
        android:id="@+id/frequency_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="设置频率"
        android:textSize="22dip"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">

        <EditText
            android:id="@+id/frequency_Edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Background"
            android:layout_marginLeft="30dp"
            android:inputType="numberDecimal"
            android:hint="频率"/>

        <TextView
            android:id="@+id/frequency_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginLeft="8dp"
            android:text="秒/次" />

    </LinearLayout>

    <Button
        android:id="@+id/fre_conf_bt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/default_button_height_small"
        android:text="确定"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:background="@color/colorButton"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/password_change_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:text="修改密码"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_gravity="center_horizontal" />
    <EditText
        android:id="@+id/original_userpwd_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@color/Background"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:height="40dip"
        android:maxLines="1"
        android:inputType="text"
        android:hint="初始密码" />

    <EditText
        android:id="@+id/new_passwd_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@color/Background"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:height="40dip"
        android:hint="新密码"
        android:inputType="text"
        android:maxLines="1" />

    <EditText
        android:id="@+id/confirm_passwd_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:background="@color/Background"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:height="40dip"
        android:hint="确认密码"
        android:inputType="text"
        android:maxLines="1" />
    <Button
        android:id="@+id/change_submit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/default_button_height_small"
        android:layout_marginTop="10dip"
        android:text="完成"
        android:textColor="@android:color/white"
        android:background="@color/colorButton"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
