<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.yiweiyihangft.datamonitor.WelcomeActivity">

    <TextView
        android:id="@+id/data_show_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/default_time_textSize"
        tools:text="2016-12-11-12:00"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"/>
    <Button
        android:id="@+id/monitorStart_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="16dp"
        android:text="开始监测"/>

    <Button
        android:id="@+id/dataMonitor_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/colorButton"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="16dp"
        android:text="数据监测"/>
    <TextView
        android:id="@+id/Instruction_dataMonitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="16dp"
        android:text="@string/Instr_dataMonitorSet"
        android:layout_gravity="right"
        android:textColor="@color/colorTextHint"/>
    <Button
        android:id="@+id/userSet_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/colorButton"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="16dp"
        android:text="用户设置"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Instr_userSet"
        android:layout_marginTop="8dp"
        android:textSize="16dp"
        android:textColor="@color/colorTextHint"
        android:layout_gravity="right"/>
</LinearLayout>
